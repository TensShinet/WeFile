{
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "schemes": [
    "http",
    "https"
  ],
  "swagger": "2.0",
  "info": {
    "description": "WeFile API",
    "version": "0.0.1"
  },
  "basePath": "/api/v1",
  "paths": {
    "/download": {
      "get": {
        "description": "用户下载",
        "produces": [
          "application/octect-stream"
        ],
        "tags": [
          "File"
        ],
        "summary": "Download",
        "operationId": "Download",
        "parameters": [
          {
            "type": "string",
            "description": "采用 jwt 验证方式",
            "name": "Authorization",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/DownloadResponse"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      }
    },
    "/download_address/{user_id}": {
      "get": {
        "description": "得到用户文件下载地址，并设置 jwt token",
        "tags": [
          "User"
        ],
        "summary": "GetDownloadAddress",
        "operationId": "GetDownloadAddress",
        "parameters": [
          {
            "type": "string",
            "x-go-name": "Cookie",
            "name": "cookie",
            "in": "header",
            "required": true
          },
          {
            "type": "integer",
            "format": "int64",
            "x-go-name": "FileID",
            "name": "file_id",
            "in": "query",
            "required": true
          },
          {
            "type": "string",
            "x-go-name": "FileName",
            "name": "file_name",
            "in": "query",
            "required": true
          },
          {
            "type": "string",
            "x-go-name": "Directory",
            "name": "directory",
            "in": "query",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/AddressResponse"
          },
          "400": {
            "$ref": "#/responses/BadRequestResponse"
          },
          "401": {
            "$ref": "#/responses/UnauthorizedResponse"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      }
    },
    "/file_list/{user_id}": {
      "get": {
        "description": "用户目录下的文件",
        "tags": [
          "User"
        ],
        "summary": "GetUserFileList",
        "operationId": "GetUserFileList",
        "parameters": [
          {
            "type": "string",
            "x-go-name": "Cookie",
            "name": "cookie",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "x-go-name": "Directory",
            "name": "directory",
            "in": "query",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/FileListResponse"
          },
          "401": {
            "$ref": "#/responses/UnauthorizedResponse"
          },
          "404": {
            "$ref": "#/responses/NotFoundError"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      }
    },
    "/role/all": {
      "get": {
        "description": "获得所有角色",
        "tags": [
          "Role"
        ],
        "summary": "GetAllRoles",
        "operationId": "GetAllRoles",
        "responses": {
          "200": {
            "$ref": "#/responses/RoleList"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      }
    },
    "/upload": {
      "post": {
        "description": "用户上传",
        "tags": [
          "File"
        ],
        "summary": "Upload",
        "operationId": "Upload",
        "parameters": [
          {
            "type": "string",
            "description": "采用 jwt 验证方式",
            "name": "Authorization",
            "in": "header"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/UploadResponse"
          },
          "400": {
            "$ref": "#/responses/BadRequestResponse"
          },
          "401": {
            "$ref": "#/responses/UnauthorizedResponse"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      }
    },
    "/upload_address/{user_id}": {
      "get": {
        "description": "得到用户上传地址，并设置 jwt token",
        "tags": [
          "User"
        ],
        "summary": "GetUploadAddress",
        "operationId": "GetUploadAddress",
        "parameters": [
          {
            "type": "string",
            "x-go-name": "Cookie",
            "name": "cookie",
            "in": "header",
            "required": true
          },
          {
            "type": "string",
            "x-go-name": "FileName",
            "description": "文件名",
            "name": "file_name",
            "in": "query",
            "required": true
          },
          {
            "type": "string",
            "x-go-name": "Directory",
            "description": "目录\n比如 / /dir /dir1/dir2",
            "name": "directory",
            "in": "query",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/AddressResponse"
          },
          "400": {
            "$ref": "#/responses/BadRequestResponse"
          },
          "401": {
            "$ref": "#/responses/UnauthorizedResponse"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      }
    },
    "/user/sign_in": {
      "post": {
        "description": "用户登录",
        "tags": [
          "User"
        ],
        "summary": "SignIn",
        "operationId": "SignIn",
        "parameters": [
          {
            "x-go-name": "Body",
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "required": [
                "email",
                "password"
              ],
              "properties": {
                "email": {
                  "description": "邮箱",
                  "type": "string",
                  "x-go-name": "Email"
                },
                "password": {
                  "description": "密码",
                  "type": "string",
                  "x-go-name": "Password"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/UserResponse"
          },
          "403": {
            "$ref": "#/responses/ForbiddenResponse"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      }
    },
    "/user/sign_up": {
      "post": {
        "description": "用户注册",
        "tags": [
          "User"
        ],
        "summary": "SignUp",
        "operationId": "SignUp",
        "parameters": [
          {
            "x-go-name": "User",
            "description": "新用户",
            "name": "user",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/UserResponse"
          },
          "400": {
            "$ref": "#/responses/BadRequestResponse"
          },
          "409": {
            "$ref": "#/responses/ConflictError"
          },
          "500": {
            "$ref": "#/responses/ErrorResponse"
          }
        }
      }
    }
  },
  "definitions": {
    "File": {
      "type": "object",
      "properties": {
        "file_id": {
          "description": "文件 id 用于下载",
          "type": "integer",
          "format": "int64",
          "x-go-name": "FileID"
        },
        "file_name": {
          "description": "文件名",
          "type": "string",
          "x-go-name": "FileName"
        },
        "file_size": {
          "description": "文件大小 单位 Byte",
          "type": "integer",
          "format": "int64",
          "x-go-name": "FileSize"
        },
        "is_directory": {
          "description": "是否是目录",
          "type": "boolean",
          "x-go-name": "IsDirectory"
        },
        "upload_at": {
          "description": "上传时间",
          "type": "string",
          "format": "date-time",
          "x-go-name": "UploadAt"
        }
      },
      "x-go-package": "github.com/TensShinet/WeFile/service/base/handler"
    },
    "NewUser": {
      "type": "object",
      "required": [
        "name",
        "password",
        "email",
        "verify_code"
      ],
      "properties": {
        "email": {
          "description": "邮箱\n\n邮箱唯一",
          "type": "string",
          "x-go-name": "Email"
        },
        "name": {
          "description": "用户名",
          "type": "string",
          "maxLength": 64,
          "minLength": 1,
          "x-go-name": "Name"
        },
        "password": {
          "description": "密码",
          "type": "string",
          "maxLength": 64,
          "minLength": 8,
          "x-go-name": "Password"
        },
        "verify_code": {
          "description": "验证码\n\n邮件拿验证码",
          "type": "string",
          "x-go-name": "VerifyCode"
        }
      },
      "x-go-package": "github.com/TensShinet/WeFile/service/base/handler"
    },
    "Role": {
      "type": "object",
      "properties": {
        "name": {
          "description": "角色名",
          "type": "string",
          "x-go-name": "Name"
        },
        "role_id": {
          "description": "角色 id",
          "type": "integer",
          "format": "int64",
          "x-go-name": "RoleID"
        }
      },
      "x-go-package": "github.com/TensShinet/WeFile/service/base/handler"
    },
    "User": {
      "type": "object",
      "properties": {
        "csrf_token": {
          "description": "csrf Token",
          "type": "string",
          "x-go-name": "CSRFToken"
        },
        "email": {
          "description": "邮箱",
          "type": "string",
          "x-go-name": "Email"
        },
        "name": {
          "description": "用户名",
          "type": "string",
          "x-go-name": "Name"
        },
        "profile": {
          "description": "个人简介",
          "type": "string",
          "x-go-name": "Profile"
        },
        "role_id": {
          "description": "角色 id",
          "type": "integer",
          "format": "int64",
          "x-go-name": "RoleID"
        },
        "role_name": {
          "description": "角色名",
          "type": "string",
          "x-go-name": "RoleName"
        },
        "user_id": {
          "description": "用户 id",
          "type": "integer",
          "format": "int64",
          "x-go-name": "UserID"
        }
      },
      "x-go-package": "github.com/TensShinet/WeFile/service/base/handler"
    }
  },
  "responses": {
    "AddressResponse": {
      "description": "Address",
      "schema": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "x-go-name": "Address"
          }
        }
      },
      "headers": {
        "Authorization": {
          "type": "string",
          "description": "采用 jwt 的方法认证"
        }
      }
    },
    "BadRequestResponse": {
      "description": "BadRequest",
      "headers": {
        "message": {
          "type": "string"
        }
      }
    },
    "ConflictError": {
      "description": "Conflict Error",
      "headers": {
        "message": {
          "type": "string"
        }
      }
    },
    "DownloadResponse": {
      "description": "Download Response",
      "headers": {
        "Content-Disposition": {
          "type": "string"
        }
      }
    },
    "ErrorResponse": {
      "description": "Sever Error",
      "headers": {
        "message": {
          "type": "string"
        }
      }
    },
    "FileListResponse": {
      "description": "File List",
      "schema": {
        "type": "object",
        "properties": {
          "directory": {
            "type": "string",
            "x-go-name": "Directory"
          },
          "files": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/File"
            },
            "x-go-name": "Files"
          }
        }
      }
    },
    "ForbiddenResponse": {
      "description": "Forbidden Error",
      "headers": {
        "message": {
          "type": "string"
        }
      }
    },
    "NotFoundError": {
      "description": "NotFound Error",
      "headers": {
        "message": {
          "type": "string"
        }
      }
    },
    "RoleList": {
      "description": "Role List",
      "schema": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/Role"
        }
      }
    },
    "UnauthorizedResponse": {
      "description": "Unauthorized Error",
      "headers": {
        "message": {
          "type": "string"
        }
      }
    },
    "UploadResponse": {
      "description": "Upload Response",
      "headers": {
        "file_id": {
          "type": "integer",
          "format": "int64",
          "description": "文件 id 用于下载"
        },
        "file_name": {
          "type": "string",
          "description": "文件名"
        },
        "file_size": {
          "type": "integer",
          "format": "int64",
          "description": "文件大小 单位 Byte"
        },
        "is_directory": {
          "type": "boolean",
          "description": "是否是目录"
        },
        "upload_at": {
          "type": "string",
          "format": "date-time",
          "description": "上传时间"
        }
      }
    },
    "UserResponse": {
      "description": "User",
      "schema": {
        "$ref": "#/definitions/User"
      },
      "headers": {
        "cookie": {
          "type": "string"
        }
      }
    }
  }
}